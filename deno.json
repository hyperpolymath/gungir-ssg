{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/gungir-ssg",
  "version": "0.3.0",
  "exports": "./mod.ts",
  "tasks": {
    "fmt": "deno fmt adapters/*.js",
    "fmt:check": "deno fmt --check adapters/*.js",
    "lint": "deno lint adapters/*.js",
    "test": "deno test --allow-run --allow-read tests/",
    "test:coverage": "deno test --allow-run --allow-read --coverage=coverage/ tests/",
    "test:e2e": "deno test --allow-run --allow-read --allow-write tests/e2e/",
    "check": "deno task fmt:check && deno task lint",
    "ci": "deno task check && deno task test"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["adapters/", "tests/", "scripts/"],
    "exclude": ["coverage/", ".git/"]
  },
  "lint": {
    "include": ["adapters/", "tests/", "scripts/"],
    "exclude": ["coverage/", ".git/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "no-await-in-loop",
        "no-console",
        "no-const-assign",
        "no-eval",
        "no-throw-literal",
        "prefer-const"
      ],
      "exclude": ["no-console"]
    }
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["tests/fixtures/"]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  }
}
